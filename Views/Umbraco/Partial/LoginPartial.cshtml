@model Umbraco.Cms.Web.UI.Models.LoginModel

@if (!User.Identity.IsAuthenticated)
{
    using (Html.BeginUmbracoForm("LoginForm", "AuthSurface"))
    {
         @Html.ValidationSummary(prefix: "LoginForm")
         <fieldset>
             <legend>Login</legend>
             @Html.EditorFor(x => Model, "", "LoginForm")
             <br />
             <input type="submit" value="Login"/>
         </fieldset>
    }
}
else
{
    <h1>LOGGED IN AS @User.Identity.Name.ToUpper() | <a href="@Url.Action("Logout", "AuthSurface")">LOGOUT</a></h1>
}
<br />